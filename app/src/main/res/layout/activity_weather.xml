<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_weather_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity">

    <TextView
        android:id="@+id/tv_weather_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="italic"
        android:text="UserName" />

    <TextView
        android:layout_below="@id/tv_weather_username"
        android:id="@+id/tv_weather_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="italic"
        android:text="Weather Summary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_weather_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_weather_summary"
        />

</RelativeLayout>